<style>
    .parishName {
        margin-top: 0px;
    }

    a:hover {
        text-decoration: none;
    }

    p{
        margin-bottom: 0px;
    }
</style>

<h3 id='stateName'> {{state}} Chapters </h3>
<br> {{#each parish}}

<div class='row parish'>

    <div class="parishPic col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <img style='height: 100%;' src='/images/bvm.jpg'>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <a target='_blank' href='{{WEBSITE}}'>
            <h3 class='parishName'> {{PARISH_NAME}} - {{CITYSTATE}} </h3>
        </a>
        <p>{{ADDRESS}}</p>
        <p>{{CITYSTATEZIP}}</p>
        <a target='_blank' href='{{WEBSITE}}'>
            <p>{{WEBSITE}}</p>
        </a>
        <p>Pastor: {{PRIEST}}</p>
        <br>
        <p>Founded {{FOUNDED}}</p>
        <p>{{MANAGER}}</p>
        <p>{{PHONE}}</p>
        
    </div>
    {{state}} {{name}} {{priest}} {{founded}} {{website}} {{manager}} {{phone}} {{photoUrl}}
</div>
<hr style='background-color: #6DD0F7; height: 3px; border-radius: 1px;'> {{/each}}